  },
  "dependencies": {
    "@lit-labs/ssr-client": "^1.1.6",
    "lit": "^3.1.0"
  },
  "devDependencies": {
    "@greenwood/cli": "~0.29.0",
    "@greenwood/plugin-adapter-vercel": "~0.29.0",
    "@greenwood/plugin-renderer-lit": "~0.29.0",
    "patch-package": "^8.0.0",
    "rimraf": "^5.0.0"
  }
}
